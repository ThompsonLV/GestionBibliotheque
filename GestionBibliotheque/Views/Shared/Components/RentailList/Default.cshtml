@model IEnumerable<GestionBibliotheque.Entities.Rentail>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RentailDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>            
            <th>
                Livres
            </th>            
            <th>
                Lecteurs
            </th>            
            <th>
                Retour
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RentailDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lector.Firstname)
                    @Html.DisplayFor(modelItem => item.Lector.Lastname)
                </td>
                <td>
                    @if (item.ReturnDate == null)
                    {
                        <a onclick="returnBook(@item.Id)" href="javascript:void(0)" class="btn btn-primary">Return book</a>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>