@model GestionBibliotheque.Models.BookViewModel

@{
    ViewData["Title"] = "Edit";
    var authorsList = ViewData["AuthorsList"] as IEnumerable<SelectListItem>;
    var domainsList = ViewData["DomainsList"] as IEnumerable<SelectListItem>;
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nbpages" class="control-label"></label>
                <input asp-for="Nbpages" class="form-control" />
                <span asp-validation-for="Nbpages" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="AuthorId" class="control-label">Autheur</label>
                <select asp-for="AuthorId" asp-items="authorsList" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="DomainId" class="control-label">Domaine</label>
                <select asp-for="DomainId" asp-items="domainsList" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
